<section id="services">
    <div class="container">

        <div class="row">
            <div class="col-sm-4">
                <a class="image-hover d-flex align-items-center justify-content-center" href="<%= root_path()%>#awards-projects"
                    data-plugin-options='{"type":"iframe"}'>
                    <img class="img-fluid position-absolute" style="z-index: 0;"
                        src="assets/elavator-control-panel.jpg" alt="img" />
                    <button class="btn-default btn-lg" style="z-index: 100; ">SEE OUR AWARDS AND PROJECTS</button>
                </a>
            </div>

            <div class="col-sm-4">
                <a class="image-hover d-flex align-items-center justify-content-center"
                    href="<%= residential_path() %>" data-plugin-options='{"type":"iframe"}'>
                    <img class="img-fluid position-absolute" style="z-index: 0;"
                        src="assets/elevator-residential.jpg" alt="img" />
                    <button class="btn btn-default btn-lg" href="<%= residential_path() %>">RESIDENTIAL SERVICES &nbsp; <i
                            class="fa fa-angle-right"></i></button>
                </a>
            </div>

            <div class="col-sm-4">
                <a class="image-hover d-flex align-items-center justify-content-center" href="<%= corporate_path() %>"
                    data-plugin-options='{"type":"iframe"}'>
                    <img class="img-fluid position-absolute" style="z-index: 0;"

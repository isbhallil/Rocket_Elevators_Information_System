<form id="residential-form" class="row clearfix" method="post" action="">

    <div class="col-lg-8 col-sm-7">
        <div class="heading-title">
            <h4>Residential Building</h4>
        </div>

        <fieldset class="mt-60">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <label for="residential-appartments">appartments</label>
                    <input required id="residential-appartments" name="residential[appartments]" type="number"
                        class="form-control"  min="0"/>

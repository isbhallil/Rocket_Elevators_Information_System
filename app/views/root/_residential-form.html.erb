                <div class="col-md-4 col-sm-6">
                    <label for="residential-stories">stories </label>
                    <input required id="residential-stories" name="residential[stories]" type="number"
                        class="form-control"  min="0"/>
                </div>
                <div class="col-md-4 col-sm-6">
                    <label for="residential-basements">basements</label>
                    <input id="residential-basements" name="residential[basements]" type="number"
                        class="form-control"  min="0"/>

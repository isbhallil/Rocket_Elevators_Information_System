<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <section>
      <div class="container">
        
        <div class="row">

          <div class="col-md-6 offset-md-3">

            <!-- ALERT -->
            <%= render "devise/shared/error_messages", resource: resource %>
            <!-- /ALERT -->

            <div class="box-static box-border-top p-30">
              <div class="box-title mb-30">
                <h2 class="fs-20">Sign Up</h2>
              </div>

              <form class="m-0" method="post" action="#" autocomplete="off">
                <div class="clearfix">
                  
                  <!-- Email -->
                  <div class="form-group">
                    <%= f.text_field :firstname, autofocus: true, class: 'form-control', placeholder: 'First Name' %>
                  </div>

                  <!-- Email -->
                  <div class="form-group">
                    <%= f.text_field :lastname, autofocus: true, class: 'form-control', placeholder: 'Last Name' %>
                  </div>

                  <!-- Email -->
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
                  </div>

                  <!-- Password -->
                  <div class="form-group">
                    <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'Password' %>
                  </div>
                  
                  <!-- Confirm password -->
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control', placeholder: 'Confirm Password' %>
                  </div>
                    
                </div>
                
                <div class="row">
                  
                  <div class="col-md-6 col-sm-6 col-6">
                    
                  </div>
                  
                  <div class="col-md-6 col-sm-6 col-6 text-right">
                    <%= f.submit  "Create Employee", class:"btn btn-primary" %>
                  </div>
                  
                </div>
                
              </form>

            </div>
            
            <div class="mt-30 text-center">
              <%- if devise_mapping.registerable? && controller_name != 'sessions' %>
                <strong><%= link_to "Sign in", new_registration_path(resource_name) %></strong>
              <% end %>
            </div>

          </div>
        </div>
        
      </div>
    </section>
  <% end %>

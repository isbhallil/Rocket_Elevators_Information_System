<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section>
    <div class="container">
      
      <div class="row">

        <div class="col-md-6 offset-md-3">

          

          <div class="box-static box-border-top p-30">
            <div class="box-title mb-30">
              <h2 class="fs-20">Login</h2>
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>

            <form class="m-0" method="post" action="#" autocomplete="off">
              
              <div class="clearfix">
                
                <!-- Email -->
                <div class="form-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control"%>
                </div>
                
                <!-- Password -->
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "current-password", placeholder: "Passeword", class: "form-control"%>
                </div>
                  
              </div>
              
              <div class="row">
                
                <div class="col-md-6 col-sm-6 col-6">
                  
                  <!-- Inform Tip -->                                        
                  <div class="form-tip pt-20">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "no-text-decoration fs-13 mt-10 block" %><br />
                    <% end %>
                  </div>
                  
                </div>
                
                <div class="col-md-6 col-sm-6 col-6 text-right">
                  <%= f.submit "LOGIN NOW", class: 'btn btn-primary'%>
                </div>
                
              </div>
              
            </form>

          </div>
          
          <div class="mt-30 text-center">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <strong><%= link_to "Create Account", new_registration_path(resource_name) %></strong>
            <% end %>
          </div>

        </div>
      </div>
      
    </div>
  </section>
<% end %>
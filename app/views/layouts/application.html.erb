<!DOCTYPE html>
<html>

<head>
  <title>RocketElevatorsInformationSystem</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag "application" %>
</head>

<p class="navbar-text float-right">
  <% if employee_signed_in? %>
  Logged in as <strong><%= current_employee.email %></strong>.
  <%= link_to 'Edit profile', edit_employee_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_employee_session_path, method: :delete, :class => 'navbar-link'  %>
    <% end %>
</p>

<body class="smoothscroll enable-animation">
  <div id="wrapper">
    <!-- HEADER -->
    <%= render partial: 'common/header', locals: { navs: @navs}%>

    <!-- 1px line separator -->
    <div id="top"></div>

    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
    
    <!-- CONTACT -->
    <%= render partial: 'common/contact' %>

    <!-- FOOTER -->
    <%= render partial: 'common/footer' %> 

  >
  </div>
</body>

<script>
  var plugin_path = 'assets/plugins/';
</script>

</html>

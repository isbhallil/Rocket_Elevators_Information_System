<!DOCTYPE html>
<html>
  <head>
    <title>RocketElevatorsInformationSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- HEADER -->
    <%= render partial: 'common/header', locals: { navs: @navs}%>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
  
    <%= yield %>

    <!-- CONTACT -->
    <%= render partial: 'common/contact' %>

    <!-- FOOTER -->
    <%= render partial: 'common/footer' %> 

  </body>

  

  <script>
    var plugin_path = 'assets/plugins/';
  </script>

</html>
